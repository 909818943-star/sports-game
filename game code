<header>Sports Game Zone</header>

<div class="categories">
  <button onclick="filterGames('all')">All</button>
  <button onclick="filterGames('soccer')">Soccer</button>
  <button onclick="filterGames('basketball')">Basketball</button>
  <button onclick="filterGames('racing')">Racing</button>
</div>

<div class="container">

  <!-- GAME LIST -->
  <div class="games" id="games">

    <div class="game" data-category="soccer"
      onclick="playGame('https://www.retrogames.onl/embed/30538')">
      <img src="https://picsum.photos/400/200?soccer">
      <div class="game-title">Retro Soccer</div>
    </div>

    <div class="game" data-category="basketball"
      onclick="playGame('https://www.retrogames.onl/embed/20463')">
